@model ProLEGO.Models.ProjectLog

@{
    ViewBag.Title = "ProjectLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/Scripts/datatables/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script src="~/Scripts/prolego.js" type="text/javascript"></script>

<div id="pro-detail-body"></div>
<div id="pro-detail-header"></div>
<div class="container detail-header">
    <span class="col-md-5 logo"></span>
    <div class="col-md-3 detail-machine">
        <span class="img-computer"></span>
        <span>@((ViewBag.compName != null) ? ViewBag.compName : "SHG-L80000000")</span>
    </div>
</div>
<div class="container">
    <div class="detail-body" style="padding-right: 15%;">
        <h2 class="pro_log_header">Project Log</h2>
        <table id="pro_log" class="table table-hover table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>Machine</th>
                    <th>Project Name</th>
                    <th>Edit Project Column</th>
                    <th>Event</th>
                    <th>Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.logList)
                {
                    <tr>
                        <td>@item.Machine</td>
                        <td>@item.Project</td>
                        <td>@item.PJColumn</td>
                        <td>@item.Event</td>
                        <td>@item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(function () {
        $('#pro_log').DataTable({
            'iDisplayLength': 10,
            'aLengthMenu': [[10, 25, 50, 100, -1],
                            [10, 25, 50, 100, "All"]],
            "aaSorting": []
        });
        ProLego.pro_log();
    })
</script>